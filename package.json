{
  "name": "js-reporters",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.js",
    "lint": "eslint lib/ test/",
    "test": "node test/test.js",
    "test-integration": "mocha test/integration/adapters.js"
  },
  "devDependencies": {
    "babel-core": "^6.7.2",
    "babel-eslint": "^5.0.0",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^3.5.0",
    "commitplease": "^2.2.3",
    "eslint": "~2.2.0",
    "jasmine": "^2.3.1",
    "jasmine-core": "^2.3.4",
    "mkdirp": "^0.5.1",
    "mocha": "^2.4.5",
    "qunitjs": "^1.18.0",
    "rollup": "^0.19.1"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "rules": {
      "no-console": 0,
      "brace-style": 1,
      "key-spacing": 1,
      "space-before-blocks": 1,
      "lines-around-comment": [
        1,
        {
          "beforeBlockComment": true,
          "beforeLineComment": true
        }
      ]
    },
    "globals": {
      "console": false
    }
  }
}
